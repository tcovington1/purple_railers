<h1>Add Address</h1>


<div class="ui form">
<%= form_for [@location, @address] do |a| %>
  <div class="field">
  <%= a.label :street %>
  <%= a.text_field :street, required: true %>
  </div>
  <div class="field">
  <%= a.label :city %>
  <%= a.text_field :city, required: true %>
  </div>
  <div class="field">
  <%= a.label :state %>
  <%= a.text_field :state, required: true %>
  </div>
  <div class="field">
  <%= a.label :zip %>
  <%= a.text_field :zip, required: true %>
  </div>


  <%= a.submit %>

  </div>
<% end %>

